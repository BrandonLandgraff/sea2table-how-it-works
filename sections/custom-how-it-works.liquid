<section class="how-it-works-outer">
  <section class="how-it-works">
  <div class="inner">
    <div class="how-it-work">
      <div class="left-section">
        <p class="subheading">{{ section.settings.subheading }}</p>
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <p class="caption">{{ section.settings.caption }}</p>
      </div>
      <div class="middle-section">
        {% for block in section.blocks %}
          <div class="items">
            <h3 class="step-count">{{ block.settings.step_count }}</h3>
          {% if block.settings.step_image %}
            <img src="{{ block.settings.step_image | img_url:'master' }}" class="cstm-img" height="" width=""/>
            {% endif %}
          <p class="caption">{{ block.settings.step_caption }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="right-section">
        {% if section.settings.ryt_image %}
        <img src="{{ section.settings.ryt_image | img_url:'master' }}" class="cstm-img" height="" width=""/>
          {% endif %}
      </div>
    </div>
  
  </div>
</section>
  {% if section.settings.button_label != blank %}
  <div class="bottom-section">
      <a href="{{ section.settings.button_link }}" class="abtest-original homepage-featured-box-btn get-started-btn plus-animated-button"> {{ section.settings.button_label }}<span class="plus-animated-button__hook"> {% render 'icon-hook' %} </span></a>
      <h5>{{ section.settings.button_bottom_text }}</h5>
    </div>
    {% endif %}
</section>

{% schema %}
  {
    "name": "How It Works",
    "class": "custom-how-it-work",
    "settings": [
      {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
      {
            "type": "textarea",
            "id": "subheading",
            "label": "Sub Heading"
        },
      {
            "type": "richtext",
            "id": "caption",
            "label": "Caption"
        },
      {
            "type": "image_picker",
            "id": "ryt_image",
            "label": "Choose Image"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "textarea",
            "id": "button_bottom_text",
            "label": "Button Bottom Text"
        }
    ],
    "max_blocks": 3,
    "blocks": [
      {
        "type": "tab_content",
        "name": "Steps",
        
        "settings": [
           {
            "type": "image_picker",
            "id": "step_image",
            "label": "Choose Background Image"
        },
      {
            "type": "text",
            "id": "step_count",
            "label": "Count"
        },
      {
            "type": "textarea",
            "id": "step_caption",
            "label": "Caption"
        }
        ]
      }
    ],
    "presets": [
        {
            "name": "How It Works", 
            "category": "Custom"
        }
    ]
  }
{% endschema %}

